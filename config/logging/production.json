{
  "fra_config_version": 1,
  "adapter": "python",
  "logging": {
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
      "standard": {
        "format": "%(asctime)s %(levelname)s %(name)s %(message)s"
      }
    },
    "handlers": {
      "console": {
        "class": "logging.StreamHandler",
        "level": "INFO",
        "formatter": "standard",
        "stream": "ext://sys.stdout"
      },
      "app_file": {
        "class": "logging.handlers.TimedRotatingFileHandler",
        "level": "INFO",
        "formatter": "standard",
        "filename": "fra.log",
        "when": "midnight",
        "interval": 1,
        "backupCount": 14,
        "encoding": "utf-8",
        "utc": true
      },
      "access_file": {
        "class": "logging.handlers.TimedRotatingFileHandler",
        "level": "INFO",
        "formatter": "standard",
        "filename": "fra-access.log",
        "when": "midnight",
        "interval": 1,
        "backupCount": 14,
        "encoding": "utf-8",
        "utc": true
      },
      "remote_http": {
        "class": "logging.handlers.HTTPHandler",
        "level": "ERROR",
        "host": "127.0.0.1:9000",
        "url": "/logs",
        "method": "POST"
      }
    },
    "root": {
      "level": "INFO",
      "handlers": ["console", "app_file"]
    },
    "loggers": {
      "uvicorn.error": {
        "level": "INFO",
        "handlers": ["console", "app_file"],
        "propagate": false
      },
      "uvicorn.access": {
        "level": "INFO",
        "handlers": ["console", "access_file"],
        "propagate": false
      },
      "fra.job": {
        "level": "INFO",
        "handlers": ["console", "app_file"],
        "propagate": false
      }
    }
  }
}