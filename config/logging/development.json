{
  "fra_config_version": 1,
  "adapter": "python",
  "logging": {
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
      "standard": {
        "format": "%(asctime)s %(levelname)s %(name)s %(message)s"
      }
    },
    "handlers": {
      "console": {
        "class": "logging.StreamHandler",
        "level": "INFO",
        "formatter": "standard",
        "stream": "ext://sys.stdout"
      },
      "app_file": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "INFO",
        "formatter": "standard",
        "filename": "fra.log",
        "maxBytes": 10485760,
        "backupCount": 10,
        "encoding": "utf-8"
      },
      "access_file": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "INFO",
        "formatter": "standard",
        "filename": "fra-access.log",
        "maxBytes": 10485760,
        "backupCount": 10,
        "encoding": "utf-8"
      }
    },
    "root": {
      "level": "INFO",
      "handlers": ["console", "app_file"]
    },
    "loggers": {
      "uvicorn.error": {
        "level": "INFO",
        "handlers": ["console", "app_file"],
        "propagate": false
      },
      "uvicorn.access": {
        "level": "INFO",
        "handlers": ["console", "access_file"],
        "propagate": false
      },
      "fra.job": {
        "level": "INFO",
        "handlers": ["console", "app_file"],
        "propagate": false
      }
    }
  }
}