# Server Configuration
FRA_HOST=127.0.0.1
FRA_PORT=8000
FRA_ENV=development

# Auth Configuration
# WARNING: Change these for production!
FRA_USERNAME=admin
FRA_PASSWORD=admin
FRA_JWT_SECRET=finance-report-assistant-secret-key-12345
FRA_JWT_TTL_SECONDS=86400

# Path Configuration
FRA_OUTPUT_ROOT=./output
FRA_STATIC_DIST_DIR=./frontend/dist

# CORS Configuration
FRA_CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Logging Configuration
FRA_LOG_LEVEL=INFO
FRA_LOG_DIR=./output/logs
FRA_LOG_MAX_BYTES=10485760
FRA_LOG_BACKUP_COUNT=10
FRA_LOG_HOT_RELOAD=true
# Set to True to prioritize ModelScope for downloads (recommended for China network)
FRA_USE_MODELSCOPE=True
